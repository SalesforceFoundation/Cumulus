<apex:page controller="BDI_DataImportDeleteBTN_CTRL"
    title="NPSP Data Import Delete"
    tabStyle="DataImport__c"
    showHeader="true"
    sidebar="false"
    docType="html-5.0"
    standardStylesheets="true">

    <apex:slds />
    <apex:stylesheet value="{!URLFOR($Resource.CumulusStaticResources, '/npsp-slds/npsp-common.css')}" />


        <div class="slds-scope slds-p-bottom_x-large">
            <apex:form id="idForm" styleClass="slds-p-bottom_x-large">

            <c:UTIL_PageMessages />

            <div class="slds-card__header slds-grid">
                <div class="slds-no-flex">
                    <apex:commandButton value="Delete Data Imports"
                        onclick="return confirm('Do you want to proceed deleting Data Imports?');"
                        action="{!buttonClick}"
                        styleClass="slds-button slds-button_neutral" />
                </div>
            </div>

            <div class="slds-card__header slds-grid">
                <div class="slds-no-flex">
                    <apex:commandButton value="{!$Label.bdiBtnClose}"
                        action="{!close}"
                        immediate="true"
                        styleClass="slds-button slds-button_neutral" />
                </div>
            </div>

            </apex:form>
        </div>
</apex:page>