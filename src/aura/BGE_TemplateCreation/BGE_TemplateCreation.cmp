<aura:component controller="BGE_AuraController" implements="lightning:actionOverride,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader,force:hasRecordId" access="global">
    
    <ltng:require scripts="{!$Resource.BGEResources + '/js/jquery.min.js'}" afterScriptsLoaded="{!c.scriptLoaded}" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <aura:attribute name="template" type="Batch_Template__c" access="global" default="{sobjectType : 'Batch_Template__c'}" />
    <aura:attribute name="fields" type="Batch_Template_Field__c[]" access="global" default="{sobjectType : 'Batch_Template_Field__c[]'}" />
    <aura:attribute name="selectedTemplateFields" type="Batch_Template_Field__c[]" default="{sobjectType : 'Batch_Template_Field__c[]'}" />
    
    <aura:attribute name="errorInLastRow" type="Boolean" access="global" default="false" />
    
    <aura:attribute name="toCreate" type="Boolean" access="global" default="true" />
    <aura:attribute name="toClone" type="Boolean" access="global" default="false" />
    <aura:attribute name="toEdit" type="Boolean" access="global" default="false" />
    
    <aura:attribute name="listOptions" type="Batch_Template_Field__c[]" default="[]"/>
    <aura:attribute name="defaultOptions" type="Batch_Template_Field__c[]" default="[]"/>
    
    <aura:attribute name="isjQueryLoaded" type="Boolean" default="false"/>
    
    <!--Aura Attribute for store Contact Object List as Array-->
    <aura:attribute name="templateFields" type="Batch_Template_Field__c[]" />
    <aura:attribute name="templateFieldSelected" type="Batch_Template_Field__c" />
    <aura:attribute name="templateFieldsToDelete" type="Batch_Template_Field__c[]" />
    
    <aura:attribute name="templateNameAttribute" type="String" default="" access="global"/>
    <aura:attribute name="templateDescriptionAttribute" type="String" default="" access="global" />
    
    <aura:attribute name="validationErrorFound" type="Boolean" default="false" />
    <aura:attribute name="errorMessage" type="String" default="Please, select at least one option" />
    
    <div aura:id="body">
        
        <div class="slds-form slds-form_stacked adapt-margin slds-p-around_large">
            
            <h2 class="slds-text-heading_medium slds-m-bottom_x-large">New Template</h2>
            
            <div class="slds-form-element">
                <lightning:input type="text" aura:id="templateName" name="template name" label="Template Name" value="{!v.templateNameAttribute}" />
            </div>
            
            <div class="slds-form-element">
                <lightning:textarea name="description" label="Description" aura:id="templateDescription" maxlength="300" value="{!v.templateDescriptionAttribute}"/>
            </div>
            
            <div class="slds-size_1-of-1 slds-grid slds-wrap slds-p-top_x-small">
                
                <lightning:dualListbox class="byClass2" aura:id="selectOptions" name="Select Options" label="Select Options"
                                       sourceLabel="Available Template Fields"
                                       selectedLabel="Active Template Fields"
                                       options="{! v.listOptions }"
                                       value="{! v.defaultOptions }"
                                       onchange="{! c.handleChange }"
                                       onclick="{! c.onItemSelected }"/>
                
                <aura:if isTrue="{!v.validationErrorFound}">
                    <div class="slds-m-horizontal_medium slds-has-error slds-form-element__help slds-form-element slds-size_1-of-1" style="color: rgb(194, 57, 52);">{!v.errorMessage}</div>
                </aura:if>
            </div>
            <div class="slds-m-top_x-large slds-align_absolute-center">
                <div class="slds-grid slds-wrap slds-clearfix">
                    <div class="slds-col slds_float-right slds-m-right_small slds-order_1">
                        <lightning:button class="button-style button-size" variant="brand" label="Save Template" onclick="{! c.save }" />
                    </div>
                    <div class="slds-col slds_float-left slds-m-right_small slds-order_2">
                        <lightning:button class="button-style button-size" label="Cancel" onclick="{! c.cancel }" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</aura:component>